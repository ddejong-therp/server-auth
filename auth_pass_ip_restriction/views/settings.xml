<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.base.setup</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invite_users']//div[@name='users_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="auth_setting">
                    <div class="o_setting_right_pane">
                        <span class='o_form_label'>Password Authentication IP Whitelist:</span><br />
                        <field name="ip_whitelist" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>